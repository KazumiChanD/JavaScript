% beamer specific options

               \mode<presentation>%refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode
{

%----------------------------------------------------------------------------------------------------------------------------------

% colors
%% defining colors

               \definecolor{beamer@barcolor}{RGB}{194,193,204}% light blue
               \definecolor{beamer@normaltextcolor}{RGB}{84,97,110}% gray blue
               \definecolor{beamer@headercolor}{rgb}{0,0.41,0.54} % dark blue


              \definecolor{ZooRoyal@blue}{HTML}{0084bb}
              \definecolor{ZooRoyal@grey}{HTML}{f2f3f7}
              \definecolor{ZooRoyal@fontgrey}{HTML}{777777}
              \definecolor{ZooRoyal@white}{HTML}{FFFFFF}
              \definecolor{ZooRoyal@red}{HTML}{CD1719}

%% setting the above deffinitions

               \setbeamercolor{title}{fg=ZooRoyal@red}
               \setbeamercolor{structure}{fg=ZooRoyal@red}
               \setbeamercolor{normal text}{fg=beamer@normaltextcolor}
               \setbeamercolor{frametitle}{fg=ZooRoyal@white,bg=ZooRoyal@red}
               \setbeamercolor{Feather}{fg=ZooRoyal@grey,bg=ZooRoyal@red}
               \setbeamercolor{alerted text}{fg=ZooRoyal@red}
               \setbeamercolor{block body}{bg=ZooRoyal@grey}
               \setbeamercolor{block body example}{bg=ZooRoyal@grey}
               \setbeamercolor{button}{bg=ZooRoyal@red,fg=ZooRoyal@white}
}

\mode<all>
