\subsection{Strategy-Pattern}


\begin{frame}
	\frametitle{Strategy-Pattern}
	\framesubtitle{Absicht des Patterns}
	
	\begin{block}{Absicht}
		\begin{itemize}
			\item<+-> Definiert Familie von Algorithmen, kapselt alle und mache sie austauschbar
			\item<+-> Ermöglicht es den Algorithmus unabhängig von nutzenden Klienten zu variieren
		\end{itemize}
	\end{block}
\end{frame}


\begin{frame}
	\frametitle{Strategy-Pattern}
	\framesubtitle{Beispiel des Patterns}
	\begin{figure}
		\begin{center}
			\includegraphics[height=6.5cm]{strategy-example}
		\end{center}
	\end{figure}
\end{frame}


\begin{frame}
	\frametitle{Strategy-Pattern}
	\framesubtitle{Struktur des Patterns}
	\begin{figure}
		\begin{center}
			\includegraphics[width=\textwidth]{strategy}
		\end{center}
	\end{figure}
\end{frame}


\begin{frame}
	\frametitle{Strategy-Pattern}
	\framesubtitle{Checkliste zur Implementierung des Patterns}
	
	\begin{enumerate}
		\item<+-> Identifiziere eine Menge von Algorithmen zwischen denen ein Client umschalten möchte
		\item<+-> Spezifizieren der Signaturen der Algorithmen in einem Interface
		\item<+-> Implementieren der Algorithmen in Klassen, die das Interface implementieren
		\item<+-> Alle Clients haben nur Referenzen auf das Interface
	\end{enumerate}
	
\end{frame}


\begin{frame}
	\frametitle{Strategy-Pattern}
	\framesubtitle{Folgen des Patterns}
	
	\begin{block}{Folge}<+->
		\begin{itemize}
			\item Alternative führt zu einer Unterklassenbildung
			\item<+-> Erhöht Klassenanzahl
			\item<+-> Strategien entfernen Bedingungsanweisungen
			\item<+-> Klienten müssen Strategien kennen
		\end{itemize}
	\end{block}
\end{frame}


\againframe<1>{fragenfolie}


\subsection{Composite-Pattern}


\begin{frame}
	\frametitle{Composite-Pattern}
	\framesubtitle{Absicht des Patterns}
	
	\begin{block}{Absicht}
		\begin{itemize}
			\item<+-> \structure{Baumartige} Verwaltung von Objekten
			\item<+-> \structure{Einheitliche Behandlung} sowohl von einzelne Objekten wie auch Kompositionen
		\end{itemize}
	\end{block}
\end{frame}


\begin{frame}
	\frametitle{Composite-Pattern}
	\framesubtitle{Beispiel des Patterns}
	\begin{figure}
		\begin{center}
			\includegraphics[height=6.5cm]{composite-example}
		\end{center}
		$2 + (3 * 5)$
	\end{figure}
\end{frame}


\begin{frame}
	\frametitle{Composite-Pattern}
	\framesubtitle{Struktur des Patterns}
	\begin{figure}
		\begin{center}
			\includegraphics[width=\textwidth]{composite}
		\end{center}
	\end{figure}
\end{frame}


\begin{frame}
	\frametitle{Composite-Pattern}
	\framesubtitle{Checkliste zur Implementierung des Patterns}
	
	\begin{enumerate}
		\item<+-> Sicherstellen, dass eine \structure{hierarchische Struktur} vorliegt 
		\item<+-> Sicherstellen, dass diese \structure{Struktur baumförmig} ist -- also aus inneren Knoten und Blättern besteht
		\item<+-> \structure{Gemeinsames Interface} für innere Knoten und Blätter definieren
		\item<+-> Alle innere Knoten und Blätter das \structure{Interface implementieren} lassen
		\item<+-> Allen inneren Knoten ermöglichen \structure{Relationen zu Objekten} des Typs des Interfaces zu haben
		\item<+-> Allen inneren Knoten nutzen in ihren Methoden, die sie aus dem Interface übernommen haben, die Methoden ihrer Kinder
	\end{enumerate}
	
\end{frame}


\begin{frame}
	\frametitle{Composite-Pattern}
	\framesubtitle{Folgen des Patterns}
	
	\begin{block}{Folge}<+->
		\begin{itemize}
			\item Primitive Objekte können zu komplexeren Objekten zusammen	gesetzt werden
			\item<+-> Einfach neue Arten von Komponenten hinzuzufügen
			\item<+-> Aufwand für den Klient wird nicht erhöht
		\end{itemize}
	\end{block}
\end{frame}


\againframe<1>{fragenfolie}


\subsection{Object Pool-Pattern}


\begin{frame}
	\frametitle{Object Pool-Pattern}
	\framesubtitle{Absicht des Patterns}
	
	\begin{block}{Absicht}
		\begin{itemize}
			\item<+-> \structure{Geschwindigkeit} eines Programms erhöhen, indem Klassen nicht mehrfach instantiiert werden müssen
			\item<+-> \structure{Ersatz} des Singleton-Patterns
		\end{itemize}
	\end{block}
\end{frame}


\begin{frame}
	\frametitle{Object Pool-Pattern}
	\framesubtitle{Beispiel des Patterns}
	\begin{figure}
		\begin{center}
			\includegraphics[height=6.5cm]{object-pool-example}
		\end{center}
	\end{figure}
\end{frame}


\begin{frame}
	\frametitle{Object Pool-Pattern}
	\framesubtitle{Struktur des Patterns}
	\begin{figure}
		\begin{center}
			\includegraphics[width=\textwidth]{object-pool}
		\end{center}
	\end{figure}
\begin{description}
	\item[Reusable] Instanzen von Klassen, die mehrfach benutzt werden können
	\item[Client] Klasse, die \lstinline|Reusable|s benutzen kann
	\item[ReusablePool] Diese Klasse verwaltet die Instanzen von \lstinline|Reusable|
\end{description}
\end{frame}


\begin{frame}
	\frametitle{Object Pool-Pattern}
	\framesubtitle{Checkliste zur Implementierung des Patterns}
	
	\begin{enumerate}
		\item<+-> Erzeugen eines \lstinline|ObjectPool| mit einem privaten Feld vom Typ \lstinline|stdClass[]|
		\item<+-> Implementieren der Methoden zum beziehen und löschen von Objekten.
		\item<+-> Sicherstellen, dass im ganzen Programm nur ein und die selbe Instanz von \lstinline|ObjectPool| genutzt wird
	\end{enumerate}
	
\end{frame}


\begin{frame}
	\frametitle{Object Pool-Pattern}
	\framesubtitle{Folgen des Patterns}
	
	\begin{block}{Folge}<+->
		\begin{itemize}
			\item Je nach Architektur deutlich weniger Instanzierungen von Klassen notwendig
			\item<+-> Eine zentrale Verwaltung von Instanzen (Vereinfach Tests)
			\item<+-> Beim Entwickeln muss der State eines \lstinline|Reusable| mit bedacht werden
			\item<+-> Größe des \lstinline|ObjectPool| muss beachtet werden, da Instanzen durch den Garbage Collector nicht mehr abgebaut werden, obwohl sie nicht mehr aktiv genutzt werden
			\item<+-> \lstinline|ObjectPool| macht Singletons überflüssig
		\end{itemize}
	\end{block}
\end{frame}


\againframe<1>{fragenfolie}


\subsection{Factory Method-Pattern}


\begin{frame}
	\frametitle{Factory Method-Pattern}
	\framesubtitle{Absicht des Patterns}
	
	\begin{block}{Absicht}
		\begin{itemize}
			\item<+-> Definiert ein Interface für die Instanziierung von Klassen
			\item<+-> Entkoppelt den Klienten vollständig vom Konstruktionsprozess einer Klasse
			\item<+-> Vermeiden des \lstinline|new|-Operators
		\end{itemize}
	\end{block}
\end{frame}


\begin{frame}
	\frametitle{Factory Method-Pattern}
	\framesubtitle{Beispiel des Patterns}
	\begin{figure}
		\begin{center}
			\includegraphics[height=5cm]{factory-method-example}
		\end{center}
	\end{figure}
\end{frame}


\begin{frame}
	\frametitle{Factory Method-Pattern}
	\framesubtitle{Struktur des Patterns}
	\begin{figure}
		\begin{center}
			\includegraphics[width=\textwidth]{factory-method}
		\end{center}
	\end{figure}
\end{frame}


\begin{frame}
	\frametitle{Factory Method-Pattern}
	\framesubtitle{Checkliste zur Implementierung des Patterns}
	
	\begin{enumerate}
		\item<+-> Bestimme eine Menge von Klassen, die über Pholimorphie voneinander abhängen
		\item<+-> Definiere eine statische Methode \lstinline|create()|in der Oberklasse aller Factories
		\item<+-> Definiere die Menge an Parametern von \lstinline|create()|, die bestimmen welche konkrete Klasse instantiiert werden soll
		\item<+-> Optional kann ein ObjectPool verwendet werden, um das doppelte Erzeugen von Klassen zu unterbinden
	\end{enumerate}
\end{frame}

\begin{frame}
	\frametitle{Factory Method-Pattern}
	\framesubtitle{Folgen des Patterns}
	
	\begin{block}{Folge}<+->
		\begin{itemize}
			\item Code wird abstrakter, strukturierter und wiederverwendbarer
			\item<+-> Einführung von Subklassen die nur der	Objekterzeugung dienen
			\item<+-> Es wird möglich in den Konstruktionsprozess einzugreifen
		\end{itemize}
	\end{block}
\end{frame}


\againframe<1>{fragenfolie}


\subsection{Template Method-Pattern}


\begin{frame}
	\frametitle{Template Method-Pattern}
	\framesubtitle{Absicht des Patterns}
	
	\begin{block}{Absicht}
		\begin{itemize}
			\item<+-> Definiere ein Skelett eines Algorithmus in Methoden und delegiere einzelne Schritte an Unterklassen
			\item<+-> Unterklassen können ausgewählt Schritte eines Algorithmus' neu definieren
			\item<+-> Eine Oberklasse definiert Platzhalter, welche von Unterklassen implementiert werden können
		\end{itemize}
	\end{block}
\end{frame}


\begin{frame}
	\frametitle{Template Method-Pattern}
	\framesubtitle{Beispiel des Patterns}
	\begin{figure}
		\begin{center}
			\includegraphics[height=6.5cm]{template-method-example}
		\end{center}
	\end{figure}
\end{frame}


\begin{frame}
	\frametitle{Template Method-Pattern}
	\framesubtitle{Struktur des Patterns}
	\begin{figure}
		\begin{center}
			\includegraphics[height=6.5cm]{template-method}
		\end{center}
	\end{figure}
\end{frame}


\begin{frame}
	\frametitle{Template Method-Pattern}
	\framesubtitle{Checkliste zur Implementierung des Patterns}
	
	\begin{enumerate}
		\item<+-> Den Algorithmus in Operationen unterteilen, die standardmäßig oder nur in speziellen Situationen ausgeführt werden sollen
		\item<+-> Definition einer abstrakten Basisklasse, welche die Standartteile in Methoden implementiert
		\item<+-> Definition einer Platzhaltermethode für spezielles Verhalten
		\item<+-> Rufe die Platzhaltermethoden in der abstrakten Klasse auf
		\item<+-> Deklariere beliebig viele Kindklassen, die das spezielle Verhalten in ihren Methoden implementieren
	\end{enumerate}
\end{frame}

\begin{frame}
	\frametitle{Template Method-Pattern}
	\framesubtitle{Folgen des Patterns}
	
	\begin{block}{Folge}<+->
		\begin{itemize}
			\item Führt zu Inversion of Control
			\item<+-> Teile von Klassen können einfach wiederverwendet werden
		\end{itemize}
	\end{block}
\end{frame}


