\section{Pattern}
\subsection{Facade-Pattern}


\begin{frame}
	\frametitle{Facade-Pattern}
	\framesubtitle{Absicht des Patterns}

	\begin{block}{Absicht}
		\begin{itemize}
			\item<+-> Bereitstellung eines \structure{einheitlichen Interfaces} für die verschiedenen Interfaces eines Subsystems
			\item<+-> \structure{Vereinfachung} eines Interfaces eines Subsystems für einen bestimmten Zweck
		\end{itemize}
	\end{block}
\end{frame}


\begin{frame}
	\frametitle{Facade-Pattern}
	\framesubtitle{Beispiel}
	\begin{figure}
		\begin{center}
			\includegraphics[height=6.5cm]{facade-example}
		\end{center}
	\end{figure}
\end{frame}


\begin{frame}
\frametitle{Facade-Pattern}
\framesubtitle{Struktur des Patterns}
\begin{figure}
	\begin{center}
		\includegraphics[height=6.5cm]{facade}
	\end{center}
\end{figure}
\end{frame}


\begin{frame}
	\frametitle{Facade-Pattern}
	\framesubtitle{Checkliste zur Implementierung des Patterns}
	
	\begin{enumerate}
		\item<+-> \structure{Planung} eines simpleren Interfaces für ein Subsystem
		\item<+-> Schreiben einer \structure{Wrapper-Klasse} um das Subsystem
		\item<+-> Alle benötigten Interaktionen mit dem Subsystem im Wrapper \structure{zusammenfassen}. Der \structure{Wrapper delegiert die Aufrufe} an die entsprechenden Methoden des Subsystems
		\item<+-> Alle Clients werden auf den Wrapper umgestellt
	\end{enumerate}
	
\end{frame}


\begin{frame}
	\frametitle{Facade-Pattern}
	\framesubtitle{Folgen des Patterns}

	\begin{block}{Folge}<+->
		\begin{itemize}
			\item Reduziert die Anzahl von Objekten die gehandhabt werden müssen
			\item<+-> Fördert lose Kopplung
			\item<+-> Verhindert nicht, dass Anwendungen direkt	Subsystemklassen verwenden können
		\end{itemize}
	\end{block}
\end{frame}


